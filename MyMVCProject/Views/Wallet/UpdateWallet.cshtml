@model MyMVCProject.Models.ViewModels.UpdateWalletViewModel
@inject IHttpContextAccessor _httpContext
@using System.Security.Claims

@{
    ViewData["Title"] = "UpdateWallet";
    Layout = null;
    var name = _httpContext.HttpContext.User.Claims.First(x => x.Type == ClaimTypes.Name).Value;
    var age = _httpContext.HttpContext.User.Claims.First(x => x.Type == "Age").Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Wallet update</title>
    <link rel="stylesheet" href="~/css/Register.css">
    <link rel="stylesheet" href="~/css/Create.css">
</head>
<body>
    <div class="container-outer">
        <div class="container">
            @if (TempData["ErrorMessage"] != null)
            {
                <p class="alert">@TempData["ErrorMessage"]</p>
            }
            <div class="reg">
                <h2>Update Wallet</h2>
            </div>
            <form class="wrapper" method="post" enctype="multipart/form-data">

                <div class="form-control">
                    <label>Name</label>
                    <input class="input" type="text" value="@name" readonly>
                </div>
                <div class="form-control">
                    <label> Age</label>
                    <input class="input" type="text" value="@age" readonly>
                </div>
                <div class="form-control">
                    <label> Amount to be added to wallet</label>
                    <input class="input" type="text" id="price" name="Balance" placeholder="0.00">
                </div>
                <div class="form-control">
                    <input class="submit" type="submit" value="Update">
                    <input class="submit" type="submit" value="Return" asp-action="GoBack" asp-controller="User">
                </div>
            </form>
        </div>
    </div>
</body>
</html>
