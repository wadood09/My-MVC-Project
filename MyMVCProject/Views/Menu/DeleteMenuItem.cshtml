@model MyMVCProject.Models.MenuModel.MenuItemResponse

@{
    ViewData["Title"] = "DeleteMenuItem";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>MenuItem delete</title>
    <link rel="stylesheet" href="~/css/Register.css">
    <link rel="stylesheet" href="~/css/Create.css">
</head>
<body>
    <div class="container-outer">
        <div class="container">
            @if (TempData["ErrorMessage"] != null)
            {
                <p class="alert">@TempData["ErrorMessage"]</p>
            }
            <div class="reg">
                <h2>Delete MenuItem</h2>
            </div>
            <form class="wrapper" method="post" enctype="multipart/form-data">

                <div class="form-control">
                    <label>Name</label>
                    <input class="input" type="text" name="Name" value="@Model.Name" readonly>
                </div>
                <div class="form-control">
                    <label> Price</label>
                    <input class="input" type="text" name="Price" value="@Model.Price" readonly>
                </div>
                <div class="form-control">
                    <label> Description</label>
                    <input class="input" type="text" name="Description" value="@Model.Description" readonly>
                </div>
                <div class="form-control">
                    <input class="submit" type="submit" value="Delete">
                    <input class="submit" type="submit" value="Return" asp-action="GoBack" asp-controller="User">
                </div>
            </form>
        </div>

    </div>
</body>
</html>

