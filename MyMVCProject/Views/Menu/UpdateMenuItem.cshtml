@model MyMVCProject.Models.ViewModels.UpdateMenuItemViewModel

@{
    ViewData["Title"] = "UpdateMenuItem";
    Layout = "_Layout2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>MenuItem update</title>
    <link rel="stylesheet" href="~/css/Register.css">
    @* <link rel="stylesheet" href="~/css/Form.css"> *@
</head>
<body>
    <div class="container-outer">

        <div class="container">
            @if (TempData["ErrorMessage"] != null)
            {
                <p class="alert">@TempData["ErrorMessage"]</p>
            }
            <div class="reg">
                <h2>Update MenuItem</h2>
            </div>
            <form class="wrapper" method="post" enctype="multipart/form-data">

                <div class="form-control">
                    <label>Name</label>
                    <input class="input" type="text" name="Name" value="@Model.Name">
                </div>
                <div class="form-control">
                    <label> Price</label>
                    <input class="input" type="text" id="price" name="Price" value="@Model.Price">
                </div>
                <div class="form-control">
                    <label> Description</label>
                    <input class="input" type="text" name="Description" value="@Model.Description">
                </div>
                <div class="form-control">
                    <label>Food</label>
                    @Html.DropDownList("FoodId", ViewBag.foods as SelectList, new { @class = "select" })
                </div>
                <div class="imageUpload">
                    <label>Image</label>
                    <input type="file" name="Icon" value="@Model.Icon">
                </div>
                <div class="form-control">
                    <input class="submit" type="submit" value="Update">
                    <input class="submit" type="submit" value="Return" asp-action="GoBack" asp-controller="User">
                </div>
            </form>
        </div>

    </div>
</body>
</html>
